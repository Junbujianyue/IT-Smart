@model IEnumerable<NBD3.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Clients</h1>

<div class="container mt-2">
    <div class="row justify-content-end">
        <div class="col-auto mb-2">
            <a asp-action="Create" class="btn btn-xs btn-outline-secondary" role="button" data-bs-toggle="tooltip" data-bs-placement="top" title="Create">Create New</a>
        </div>
        <div class="col-0"></div>
    </div>
</div>

<form asp-action="Index" method="get">
    <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
    <input type="hidden" name="sortField" value="@ViewData["sortField"]" />

    <div class="row">
        <div class="col-md-6">
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" id="filterToggle" data-bs-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
                Filter/Search @ViewData["numberFilters"]
            </button>
        </div>
    </div>

    <div class="row collapse" id="collapseFilter">
        <div class="col-md-6">
            <label for="companyFilter">Company Name:</label>
            <input type="text" id="companyFilter" name="companyFilter" class="form-control" value="@ViewData["companyFilter"]" />
        </div>

        <div class="col-md-6">
            <label for="lastNameSearch">Last Name Search:</label>
            <input type="text" id="lastNameSearch" name="lastNameSearch" class="form-control" value="@ViewData["lastNameSearch"]" />
        </div>

        <div class="col-md-12 mt-2">
            <button type="submit" class="btn btn-primary">Filter</button>
            <button type="button" class="btn btn-secondary ml-2" onclick="clearFilters()">Clear Filters</button>
        </div>
    </div>
</form>



<table class="table">
    <thead>
        <tr class="table-dark">
            <th>
                <a asp-action="Index" asp-route-sortField="ClientCommpanyName" asp-route-sortDirection="@(GetSortDirection("ClientCommpanyName"))">
                    @Html.DisplayNameFor(model => model.ClientCommpanyName)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortField="ContactFullName" asp-route-sortDirection="@(GetSortDirection("ContactFullName"))">
                    @Html.DisplayNameFor(model => model.ContactFullName)
                </a>
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.ClientPhone)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.ClientEmail)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.ClientFullAddress)
           </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-dark">
                <td>
                    @Html.DisplayFor(modelItem => item.ClientCommpanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactFullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientFullAddress)
                </td>
                <td class="text-center" style="padding:5px;">
                    <a asp-action="Edit" asp-route-id="@item.ClientId" class="btn btn-xs btn-outline-primary" role="button" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit" style="font-size: 14px;">&#x270E;</a>
                    <a asp-action="Details" asp-route-id="@item.ClientId" class="btn btn-xs btn-outline-primary" role="button" data-bs-toggle="tooltip" data-bs-placement="top" title="Details" style="font-size: 14px;">&#x1F50E;</a>
                    <a asp-action="Delete" asp-route-id="@item.ClientId" class="btn btn-xs btn-outline-primary" role="button" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete" style="font-size: 14px;">&#x274C;</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    string GetSortDirection(string fieldName)
    {
        if (ViewData["sortField"] == null || ViewData["sortField"].ToString() != fieldName)
        {
            return "asc";
        }

        return ViewData["sortDirection"].ToString() == "asc" ? "desc" : "asc";
    }
}
<script>
    function clearFilters() {
        document.getElementById("companyFilter").value = "";
        document.getElementById("lastNameSearch").value = "";
    }
</script>